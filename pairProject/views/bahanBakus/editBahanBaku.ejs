<% include ../partials/script.ejs %>
<script src="/javascripts/select2/select2.min.js"></script>
<script src="/javascripts/timepicker/bootstrap-datepicker.js"></script>
<script src="/javascripts/jquery.validate/form-validation-init.js"></script>
<script type="text/javascript"
        src="/javascripts/jquery.validate/jquery.validate.min.js"></script>

<script>
    $(document).ready(function () {
        $('.datepicker1').datepicker({
            format: "yyyy-mm-dd",
            autoclose: true
        });
    });

    $(document).ready(function () {
        $('.datepicker2').datepicker({
            format: "yyyy-mm-dd",
            autoclose: true
        });
    });

</script>

<script>
    $(document).ready(function () {
        $("#statusBahan").select2({
            placeholder: "Please Select",
            width: '100%'
        });
    });
</script>

<script>
    $(function(){

        $('#jmlBahan').keypress(function(e) {
            if(isNaN(this.value+""+String.fromCharCode(e.charCode))) return false;
        })
            .on("cut copy paste",function(e){
                e.preventDefault();
            });

    });

</script>

