<div class="content-page">

    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <ol class="breadcrumb pull-left">
                        <li><a href="/">Home</a></li>
                        <li><a href="/bahanBakus">Daftar Bahan Baku</a></li>
                        <li>Edit Bahan Baku</li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Edit Bahan Baku</h3>
                        </div>
                        <div class="panel-body">
                            <div class=" form">
                                <form class="cmxform form-horizontal tasi-form"
                                      id="formEditBahanBaku"
                                      method="POST"
                                      action=""
                                      novalidate="novalidate">
                                    <div class="col-lg-2">
                                        <img src="/images/ingredients.png"
                                             alt=""
                                             class="img-responsive center-block"
                                             height="100px"
                                             width="100px">
                                    </div>
                                    <div class="col-lg-10">
                                        <div class="form-group ">
                                            <div class="col-lg-6">
                                                <label for="tglPembelian"
                                                       class="control-label">Tanggal Pembelian
                                                </label>

                                                <input type="text"
                                                       class="form-control datepicker1"
                                                       placeholder=""
                                                       id="tglPembelian"
                                                       name="tglPembelian">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <label for="namaBahan"
                                                       class="control-label">Nama Bahan</label>
                                                <input class=" form-control"
                                                       id="namaBahan"
                                                       name="namaBahan"
                                                       value="Tepung Terigu"
                                                       type="text" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <label for="jmlBahan"
                                                       class="control-label">Jumlah Bahan <small>(sesuai jumlah takaran yang dibeli : kg / butir)</small> </label>
                                                <input class="form-control"
                                                       id="jmlBahan"
                                                       name="jmlBahan"
                                                       type="text">
                                            </div>
                                        </div>
                                        <div class="form-group ">
                                            <div class="col-lg-6">
                                                <label for="tglKadaluarsa"
                                                       class="control-label">Tanggal Kadaluarsa
                                                </label>

                                                <input type="text"
                                                       class="form-control datepicker2"
                                                       placeholder=""
                                                       id="tglKadaluarsa"
                                                       name="tglKadaluarsa">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <label for="statusBahan"
                                                       class="control-label">Status Bahan </label>
                                                <select class=""
                                                        id="statusBahan"
                                                        name="statusBahan"
                                                        required>
                                                    <option value="Sudah Kadaluarsa">-</option>
                                                    <option value="Aman">Aman</option>
                                                    <option value="Akan Kadaluarsa">Akan Kadaluarsa</option>
                                                    <option value="Sudah Kadaluarsa">Sudah Kadaluarsa</option>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <button class="btn btn-primary waves-effect waves-light m-r-10"
                                                        name="submit"
                                                        type="submit"><i class="fa fa-save"></i> Simpan
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div> <!-- .form -->
                        </div> <!-- panel-body -->
                    </div>
                </div>

            </div> <!-- End Row -->

        </div>

    </div>


</div>

