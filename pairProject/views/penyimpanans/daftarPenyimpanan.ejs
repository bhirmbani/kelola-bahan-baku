<div class="content-page">

    <div class="content">
        <div class="container">

            <!-- Page-Title -->
            <div class="row">
                <div class="col-sm-12">
                    <ol class="breadcrumb pull-left">
                        <li><a href="/">Home</a></li>
                        <li><a href="/penyimpanans/">Daftar Penyimpanan</a></li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Daftar Penyimpanan</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="m-b-30">
                                        <a href="/penyimpanans/tambahPenyimpanan/"
                                           class="btn btn-primary waves-effect waves-light">
                                            <i class="fa fa-plus"></i><span> Tambah Penyimpanan </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="table-responsive">
                                        <table id="datatable"
                                               class="table table-striped table-bordered">
                                            <thead>
                                            <tr>
                                                <th>No</th>
                                                <th>Penyimpanan</th>
                                                <th>Operasi</th>
                                            </tr>
                                            </thead>


                                            <tbody>
                                            <% let no = 1
                                                datas.forEach(data => {
                                            %>
                                                <tr>
                                                    <td><%- no %></td>
                                                    <td><%- data.tempat %></td>
                                                    <td>
                                                        <a href="/penyimpanans/detailPenyimpanan/<%- data.id %>"
                                                           class="btn btn-icon waves-effect waves-light btn-purple"
                                                           data-toggle="tooltip"
                                                           data-placement="top"
                                                           title="Detail Penyimpanan"><i class="fa fa-search-plus"></i>
                                                        </a>
                                                        <a href="/penyimpanans/editPenyimpanan/<%- data.id %>"
                                                           class="btn btn-icon waves-effect waves-light btn-warning"
                                                           data-toggle="tooltip"
                                                           data-placement="top"
                                                           title="Edit Penyimpanan"><i class="fa fa-pencil"></i>
                                                        </a>
                                                        <a href="/penyimpanans/hapusPenyimpanan/<%- data.id %>"
                                                           class="btn btn-icon waves-effect waves-light btn-danger"
                                                           data-toggle="tooltip"
                                                           data-placement="top"
                                                           title="Hapus Penyimpanan"><i class="fa fa-trash"></i>
                                                        </a>
                                                    </td>
                                                </tr>

                                            <% no++ }) %>


                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div> <!-- End Row -->

        </div>

    </div>


</div>

