                    <ol class="breadcrumb pull-left">
                        <li><a href="/">Home</a></li>
                        <li><a href="/penyimpanans/">Daftar Penyimpanan</a></li>
                        <li>Tambah Penyimpanan</li>
                    </ol>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Tambah Penyimpanan</h3>
                        </div>
                        <div class="panel-body">
                            <div class=" form">
                                <form class="cmxform form-horizontal tasi-form"
                                      id="formTambahPenyimpanan"
                                      method="POST"
                                      action=""
                                      novalidate="novalidate">
                                    <div class="col-lg-2">
                                        <img src="/images/archive.png"
                                             alt=""
                                             class="img-responsive center-block"
                                             height="100px"
                                             width="100px">
                                    </div>
                                    <div class="col-lg-10">
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <label for="namaPenyimpanan"
                                                       class="control-label">Nama Penyimpanan</label>
                                                <input class=" form-control"
                                                       id="namaPenyimpanan"
                                                       name="namaPenyimpanan"
                                                       type="text">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <label for="ketPenyimpanan"
                                                       class="control-label">Keterangan </label>
                                                <textarea class="form-control"
                                                          id="ketPenyimpanan"
                                                          name="ketPenyimpanan"
                                                          rows="5"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-6">
                                                <button class="btn btn-primary waves-effect waves-light m-r-10"
                                                        name="submit"
                                                        type="submit"><i class="fa fa-save"></i> Simpan
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div> <!-- .form -->
                        </div> <!-- panel-body -->
                    </div>
                </div>

            </div> <!-- End Row -->

        </div>

